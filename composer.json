{
  "name": "imi/news4ward",
  "description": "A blogging / news system for Contao",
  "keywords": ["news", "blog"],
  "type": "contao-module",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "Christoph Wiechert",
      "email": "wio@psitrax.de",
      "homepage": "http://4wardmedia.de",
      "role": "Developer"
    },
    {
      "name": "iMi digital GmbH",
      "homepage": "https://www.imi-digital.de",
      "role": "Maintainer"
    }
  ],
  "support": {
    "issues": "https://github.com/iMi-digital/news4ward/issues",
    "forum": "https://community.contao.org/de/forumdisplay.php?110-4ward",
    "irc": "irc://irc.freenode.org/contao.de",
    "source": "https://github.com/iMi-digital/news4ward"
  },
  "require": {
    "php": ">=5.3",
    "contao/core-bundle": "^3.2.1 || ^4.4",
    "contao-community-alliance/composer-plugin": "^2.4 || ^3.0",
    "menatwork/contao-multicolumnwizard": "~3"
  },
  "suggest": {
    "imi/news4ward_tags": "Provides article tagging and a tagcloud frontend module.",
    "imi/news4ward_comments": "Let visitors comment articles",
    "imi/news4ward_categories": "Organize articles in categories and provide a frontend filter module.",
    "imi/news4ward_multicategories": "Organize articles in multiple categories and provide a frontend filter module.",
    "imi/news4ward_archive-menu": "Timebased frontend filter module.",
    "imi/news4ward_author-menu": "Frontend filter module for authors.",
    "imi/news4ward_related": "Find similar articles to the displayed one.",
    "imi/news4ward_mostread": "Count article read hits and display most visited articles.",
    "imi/news4ward_newsletter": "Prepare newsltters from articles",
    "imi/news4ward_titleSearch": "Filter listing within title searchbox",
    "imi/news4ward_metaTitle": "Extra field for page title",
    "christianbarkowsky/news4ward_robots": "Extra robots-tag field for SEO optimisation"
  },
  "replace": {
    "contao-legacy/news4ward": "self.version",
    "psi/news4ward": "self.version"
  },
  "extra": {
    "contao": {
      "sources": {
        "": "system/modules/news4ward"
      },
      "runonce": [
        "runonce/32update.php"
      ]
    },
    "branch-alias": {
      "dev-master": "2.1.x-dev"
    }
  }
}
